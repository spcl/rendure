{
    "compilerOptions": {
        /* Language and environment */
        "target": "ES2022",
        "useDefineForClassFields": true,
        "module": "es2022",
        "lib": ["ES2022", "DOM"],
        "skipLibCheck": true,

        /* Modules */
        //"allowImportingTsExtensions": true,
        "moduleResolution": "bundler",
        "verbatimModuleSyntax": true,
        "moduleDetection": "force",

        /* Linting */
        "strict": true,
    },
    "include": [
        "src",
    ]
}
